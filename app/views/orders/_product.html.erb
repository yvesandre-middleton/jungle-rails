<% if item = Product.find_by(id: product.product_id) %>

  <tr>
    <td>
      <%= image_tag item.image.tiny %>
    </td>
    <td>
      <h4><%= item.name %></h4>
      <br>
      <p><%= item.description %></p>
    </td>
    <td>
      <%= product.quantity %>
    </td>
    <td>
    <%= product.total_price %>
    </td>
  </tr>
<% end %>